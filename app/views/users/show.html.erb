<% provide(:title,@user.name) %>


<div class = "col-md-12">
  <%= link_to "勤怠を編集" ,'#' , class:"btn btn-primary" %>
    <table class = "table table-bordered table-condensed user-table">
      <tr>
        <td><%= link_to"⏪",user_path(date: @first_day.prev_month)%><%= Date.today.year%>年<%=Date.today.month%>月　時間管理表
        <%= link_to"⏩️",user_path(date: @first_day.next_month)%>
        </td>
        <td>指定勤務時間:<%= format_basic_info(@user.work_time)%></td>
        <td>基本時間:<%= format_basic_info(@user.basic_time)%></td>
        <td></td>
        <td>初日:<%= l(@first_day, format: :short)%></td>
      </tr>
      
      <tr>
        <td>所属:<%= @user.department.present?? @user.department: "未所属"%></td>
        <td>名前：<%= @user.name %></td>
        <td>コード</td>
        <td>出勤日数:0日</td>
        <td>締め:<%= l(@last_day, format: :short) %></td>
      </tr>
    </table>
    
    
    <div>
      <table class ="table table-bordered table-condensed table-striped table-hover" id="table-attendances">
        <thead>
            <th>日時</th>
            <th>曜日</th>
            <th>出社</th>
            <th>退社</th>
            <th>在社時間</th>
            <th>備考</th>
            <th>残業指示</th>
            <th>指示者</th>
          </tr>
        </thead>
        　<tbody>
        　   <% @attendances.each do |day| %>
        　  <tr>
        　    <td><%=l( day.worked_on, format: :short) %></td>
        　    <td><%= $days_of_the_week[day.worked_on.wday] %></td>        　
        　    <td></td>
        　    <td></td>
        　    <td></td>
        　    <td></td>
        　    <td></td>
        　    <td></td>
        　    <td></td>
           </tr>
           <% end %>
        　</tbody>
      </table>
</div>