<% provide(:title,@user.name) %>

<div class="row">
    <div class = "col-md-12">
        <table class = "table table-bordered table-condensed user-table">
            <tr>
              <td><%= link_to"⏪",user_path(date: @first_day.prev_month) %>
             <%=l(@first_day,format: :middle)%>　時間管理表
              <%= link_to"⏩️",user_path(date: @first_day.next_month)%>
              </td>
              <td colspan="2">指定勤務時間:<%= format_basic_info(@user.work_time)%></td>
              <td>基本時間:<%= format_basic_info(@user.basic_time)%></td>
              <td>初日:<%= l(@first_day, format: :short)%></td>
            </tr>
            
            <tr>
              <td>所属:<%= @user.department.present?? @user.department: "未所属"%></td>
              <td>名前：<%= @user.name %></td>
              <td>コード</td>
              <td>出勤日数:<%= @worked_sum %>日</td>
              <td>締め:<%= l(@last_day, format: :short) %></td>
            </tr>
        </table>
    
         <div>
          <table class ="table table-bordered table-condensed table-striped table-hover" id="table-attendances">
          <%= link_to "勤怠を編集" ,attendances_edit_one_month_user_path(@user.id,@attendances), class: "btn btn-secondary" %>
            <thead>
                <th rowspan="2">日時</th>
                <th>曜日</th>
                <th colspan="3">出社</th>
                <th colspan="3">退社</th>
                <th>在社時間</th>
                <th>備考</th>
                <th>残業指示</th>
                <th>指示者</th>
              </tr>
            </thead>
            <thead>
                <th></th>
                <th></th>
                <th>時</th>
                <th>分</th>
                <th></th>
                <th>時</th>
                <th>分</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            　<tbody>
            　   <% @attendances.each do |day| %>
            　   
            　  <tr>
            　    <td><%=l( day.worked_on, format: :short) %></td>
            　    <td><%= $days_of_the_week[day.worked_on.wday] %></td>        　
            　    <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
            　    <td><%= l(day.started_at, format: :minute) if day.started_at.present? %></td>
            　    <td>
                  <% if btn_text = attendance_state(day) %>
                  <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
                  <% end %>
            　    </td>
            　    <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
            　    <td><%= l(day.finished_at, format: :minute) if day.finished_at.present? %></td>
            　    <td></td>
            　    <td>
            　      <% if day.started_at.present? && day.finished_at.present? %>
            　      <%= working_times(day.started_at, day.finished_at)%>
            　      <% end %>
            　    </td>
            　    <td><%= day.note %></td> 
            　    <td></td>
            　    <td></td>
               </tr>
               <% end %>
            　</tbody>
            　
              <tfoot>
            　  <tr>
            　    <td colspan=2""></td>
            　    <td colspan="6"></td>
            　    <td>
            　      <%= format("%.2f", @total_working_times.to_f) %>
            　    </td>
            　    <td></td>
            　    <td></td>
            　    <td>所属長承認</td>
            　  </tr>
            　</tfoot>
            　
          </table>
         </div>
    </div>
</div>